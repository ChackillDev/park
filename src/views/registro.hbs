<section>
    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

     <form action="/add" method="post">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" placeholder=" xxxx@skate.com" class="input-group m-auto" autofocus required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Lucho" class="input-group m-auto" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="password">Password</label>
            <input type="text" name="password" id="password" placeholder="1234" class="input-group m-auto" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="repPassword">Repita la password</label>
            <input type="text" name="repPassword" id="repPassword" placeholder="1234" class="input-group m-auto" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="anos_experiencia">Años de experiencia</label>
            <input type="number" name="anos_experiencia" id="anos_experiencia" placeholder="15" class="input-group m-auto" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="especialidad">Especialidad</label>
            <input type="text" name="especialidad" id="especialidad" placeholder="flip" class="input-group m-auto" required/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label for="foto">Foto de perfil</label>
            <input type="file" name="foto" id="foto" class="input-group m-auto"/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <button class="btn btn-info mb-3">Registrarme</button>
          </div>
        </div>
      </form>
        <p><a href="/login"> Iniciar sesión</a></p>
    </div>
</section>
