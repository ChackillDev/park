<section>
  <div class=" container">
    <h2>Editar Registro</h2>
    <hr class="w-50" />

    <form action="" method="get">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" placeholder=" xxxx@skate.com" class="input-group m-auto" autofocus
           />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" placeholder="Lucho" value="{{skater.nombre}}"
          class="input-group m-auto"  />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" placeholder="1234" value="{{skater.password}}"
          class="input-group m-auto"  />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="repPassword">Repita la password</label>
        <input type="text" name="repPassword" id="repPassword" placeholder="1234" value="{{skater.repPassword}}"
          class="input-group m-auto"  />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="anos_experiencia">Años de experiencia</label>
        <input type="number" name="anos_experiencia" id="anos_experiencia" value="{{skater.anos_experiencia}}"
          placeholder="0" class="input-group m-auto"  />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="especialidad">Especialidad</label>
        <input type="text" name="especialidad" id="especialidad" placeholder="flip" value="{{skater.especialidad}}"
          class="input-group m-auto"  />
      </div>
      <div class="form-group col-12 col-sm-6 my-3">
        <label for="foto">Foto de perfil</label>
        <input type="file" name="foto" id="foto" class="input-group m-auto" />
      </div>
    </div>
      <div class="my-2">
       </div>
      <div class="mb-2">
        <button href="/list" class="btn btn-success">Continuar</button>
      </div>
    </form>
  </div>
  <p><a href="/login"> Iniciar sesión</a></p>

</section>
